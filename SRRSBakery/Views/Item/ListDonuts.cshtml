@using SRRSBakery.ViewModels
@model ItemListViewModel

<body backGound style="background-color:#EECFD4">


@foreach (var donut in Model.Items)
{
    <div class="col-sm-4 col-lg-4 col-md-4"  >
        <div class="thumbnail">

         
            <img style="border-radius:50%"width="40%" src="@donut.ImageUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">₹@donut.Price.ToString("n")</h3>
                <a asp-action="Details" asp-route-id="@donut.ItemId  ">@donut.Name</a>
                
                
            </div>
        </div>
    </div>
}

</body>